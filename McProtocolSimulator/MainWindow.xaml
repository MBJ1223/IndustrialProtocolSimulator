<Window x:Class="McProtocolSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:McProtocolSimulator.ViewModels"
        mc:Ignorable="d"
        Title="MC Protocol Simulator - Mitsubishi PLC"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단: 서버 설정 -->
        <GroupBox Grid.Row="0" Header="서버 설정">
            <StackPanel Orientation="Horizontal">
                <Label Content="포트:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Port}" Width="80" IsEnabled="{Binding CanStart}"/>
                <Button Content="서버 시작" Command="{Binding StartServerCommand}"
                        IsEnabled="{Binding CanStart}" Background="#FF4CAF50" Foreground="White"/>
                <Button Content="서버 중지" Command="{Binding StopServerCommand}"
                        IsEnabled="{Binding CanStop}" Background="#FFF44336" Foreground="White"/>
                <Separator Margin="10,0"/>
                <Label Content="상태:" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" FontWeight="Bold"
                           Foreground="{Binding IsRunning, Converter={x:Null}}"/>
            </StackPanel>
        </GroupBox>

        <!-- 중앙: 메인 컨텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="500"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽: 메모리 뷰어 -->
            <GroupBox Grid.Column="0" Header="PLC 메모리 뷰어">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 메모리 설정 -->
                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 첫번째 줄: 디바이스 선택 및 주소 설정 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,3">
                            <Label Content="디바이스:" VerticalAlignment="Center"/>
                            <ComboBox ItemsSource="{Binding DeviceTypes}"
                                      SelectedIndex="{Binding SelectedDeviceIndex}"
                                      Width="150"/>
                            <Label Content="시작주소:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBox Text="{Binding ViewStartAddress, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                            <Label Content="개수:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBox Text="{Binding ViewCount, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                        </StackPanel>

                        <!-- 두번째 줄: 버튼들 -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Button Content="새로고침" Command="{Binding RefreshMemoryCommand}"/>
                            <Button Content="메모리 초기화" Command="{Binding ClearMemoryCommand}"
                                    Background="#FFFFC107"/>
                            <Button Content="값 편집" Click="EditMemory_Click"
                                    Background="#FF2196F3" Foreground="White"/>
                        </StackPanel>
                    </Grid>

                    <!-- 메모리 테이블 -->
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding MemoryItems}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="All"
                              AlternatingRowBackground="#FFF5F5F5"
                              RowHeight="24"
                              FontFamily="Consolas">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="주소" Binding="{Binding Address}" Width="80"/>
                            <DataGridTextColumn Header="10진수" Binding="{Binding DecimalValue}" Width="80"/>
                            <DataGridTextColumn Header="16진수" Binding="{Binding HexValue}" Width="80"/>
                            <DataGridTextColumn Header="2진수" Binding="{Binding BinaryValue}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- 오른쪽: 로그 및 클라이언트 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 연결된 클라이언트 -->
                <GroupBox Grid.Row="0" Header="연결된 클라이언트">
                    <DataGrid ItemsSource="{Binding ConnectedClients}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              FontSize="11">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="IP" Binding="{Binding RemoteEndPoint}" Width="*"/>
                            <DataGridTextColumn Header="수신" Binding="{Binding BytesReceived}" Width="60"/>
                            <DataGridTextColumn Header="송신" Binding="{Binding BytesSent}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- 통신 로그 -->
                <GroupBox Grid.Row="1" Header="통신 로그">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListBox Grid.Row="0"
                                 ItemsSource="{Binding LogEntries}"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 x:Name="LogListBox"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" TextWrapping="NoWrap"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <Button Content="로그 저장" Command="{Binding SaveLogCommand}"
                                    Background="#FF2196F3" Foreground="White"/>
                            <Button Content="로그 지우기" Command="{Binding ClearLogCommand}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- 하단: 정보 -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="MC Protocol (3E Frame) Simulator - Binary/ASCII 자동 감지 지원"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="지원 디바이스: D, M, X, Y"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="지원 명령: 일괄(0401/1401), 랜덤(0403/1402)"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
