<Window x:Class="S7ProtocolSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:S7ProtocolSimulator.ViewModels"
        Title="S7 Protocol Simulator - Siemens PLC"
        Height="700" Width="1100" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- S7/Siemens 테마 색상: 청록색 계열 -->
        <Color x:Key="S7PrimaryColor">#FF009999</Color>
        <Color x:Key="S7SecondaryColor">#FF00B3B3</Color>
        <Color x:Key="S7AccentColor">#FF00CCCC</Color>
        <Color x:Key="S7DarkColor">#FF006666</Color>
        <Color x:Key="S7LightBgColor">#FFE6F7F7</Color>

        <SolidColorBrush x:Key="S7PrimaryBrush" Color="{StaticResource S7PrimaryColor}"/>
        <SolidColorBrush x:Key="S7SecondaryBrush" Color="{StaticResource S7SecondaryColor}"/>
        <SolidColorBrush x:Key="S7AccentBrush" Color="{StaticResource S7AccentColor}"/>
        <SolidColorBrush x:Key="S7DarkBrush" Color="{StaticResource S7DarkColor}"/>
        <SolidColorBrush x:Key="S7LightBgBrush" Color="{StaticResource S7LightBgColor}"/>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="{StaticResource S7PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="3"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Background="{StaticResource S7LightBgBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 배너 -->
        <Border Grid.Row="0" Background="{StaticResource S7PrimaryBrush}" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="S7" FontSize="28" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="PROTOCOL" FontSize="14" Foreground="#FFCCFFFF" VerticalAlignment="Bottom" Margin="5,0,0,5"/>
                </StackPanel>
                <TextBlock Grid.Column="1" Text="Siemens PLC Simulator" FontSize="14" Foreground="#FFE0FFFF"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Border Grid.Column="2" Background="#FF007777" CornerRadius="3" Padding="10,5">
                    <TextBlock Text="ISO-on-TCP / RFC 1006" Foreground="White" FontSize="11"/>
                </Border>
            </Grid>
        </Border>

        <GroupBox Grid.Row="1" Header="서버 설정" Margin="5,5,5,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="포트:" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Port}" Width="80" IsEnabled="{Binding CanStart}"/>
                <Button Content="서버 시작" Command="{Binding StartServerCommand}"
                        Background="{StaticResource S7PrimaryBrush}" Foreground="White"/>
                <Button Content="서버 중지" Command="{Binding StopServerCommand}"
                        Background="#FFF44336" Foreground="White"/>
                <Separator Margin="10,0"/>
                <Label Content="상태:" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" FontWeight="Bold"
                           Foreground="{StaticResource S7DarkBrush}"/>
            </StackPanel>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="500"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="PLC 메모리 뷰어">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,3">
                        <Label Content="영역:" VerticalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding AreaTypes}" SelectedIndex="{Binding SelectedAreaIndex}" Width="120"/>
                        <Label Content="DB번호:" VerticalAlignment="Center" Margin="10,0,0,0"
                               Visibility="{Binding IsDbSelected, Converter={StaticResource BoolToVis}}"/>
                        <ComboBox ItemsSource="{Binding DataBlockNumbers}" SelectedItem="{Binding SelectedDbNumber}" Width="70"
                                  Visibility="{Binding IsDbSelected, Converter={StaticResource BoolToVis}}"/>
                        <Button Content="DB 추가 생성" Command="{Binding CreateDbCommand}"
                                Visibility="{Binding IsDbSelected, Converter={StaticResource BoolToVis}}"/>
                        <Label Content="시작주소:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox Text="{Binding ViewStartAddress, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
                        <Label Content="개수:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox Text="{Binding ViewCount, UpdateSourceTrigger=PropertyChanged}" Width="60"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                        <Button Content="새로고침" Command="{Binding RefreshMemoryCommand}"/>
                        <Button Content="메모리 초기화" Command="{Binding ClearMemoryCommand}" Background="#FFFFC107"/>
                        <Button Content="값 편집" Click="EditMemory_Click"
                                Background="{StaticResource S7SecondaryBrush}" Foreground="White"/>
                    </StackPanel>

                    <DataGrid Grid.Row="2" ItemsSource="{Binding MemoryItems}" AutoGenerateColumns="False"
                              IsReadOnly="True" CanUserAddRows="False" GridLinesVisibility="All"
                              AlternatingRowBackground="{StaticResource S7LightBgBrush}" RowHeight="24" FontFamily="Consolas"
                              ColumnHeaderHeight="28" RowHeaderWidth="0">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource S7PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="주소" Binding="{Binding Address}" Width="100"/>
                            <DataGridTextColumn Header="10진수" Binding="{Binding DecimalValue}" Width="80"/>
                            <DataGridTextColumn Header="16진수" Binding="{Binding HexValue}" Width="80"/>
                            <DataGridTextColumn Header="2진수" Binding="{Binding BinaryValue}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="연결된 클라이언트">
                    <DataGrid ItemsSource="{Binding ConnectedClients}" AutoGenerateColumns="False" IsReadOnly="True" FontSize="11"
                              AlternatingRowBackground="{StaticResource S7LightBgBrush}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource S7DarkBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="5,3"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="IP" Binding="{Binding RemoteEndPoint}" Width="*"/>
                            <DataGridTextColumn Header="Rack/Slot" Binding="{Binding RackSlot}" Width="70"/>
                            <DataGridTextColumn Header="수신" Binding="{Binding BytesReceived}" Width="60"/>
                            <DataGridTextColumn Header="송신" Binding="{Binding BytesSent}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <GroupBox Grid.Row="1" Header="통신 로그">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox Grid.Row="0" ItemsSource="{Binding LogEntries}" FontFamily="Consolas" FontSize="11" x:Name="LogListBox"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto" Background="White">
                            <ListBox.ItemTemplate>
                                <DataTemplate><TextBlock Text="{Binding}" TextWrapping="NoWrap"/></DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <Button Content="로그 저장" Command="{Binding SaveLogCommand}"
                                    Background="{StaticResource S7SecondaryBrush}" Foreground="White"/>
                            <Button Content="로그 지우기" Command="{Binding ClearLogCommand}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <StatusBar Grid.Row="3" Background="{StaticResource S7DarkBrush}">
            <StatusBarItem><TextBlock Text="S7 Protocol (ISO-on-TCP) Simulator - RFC 1006" Foreground="White"/></StatusBarItem>
            <Separator/>
            <StatusBarItem><TextBlock Text="지원 영역: I, Q, M, DB" Foreground="#FFCCFFFF"/></StatusBarItem>
            <Separator/>
            <StatusBarItem><TextBlock Text="기본 포트: 102" Foreground="#FFCCFFFF"/></StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
